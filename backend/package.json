{
    "name": "viteviteapp-backend",
    "version": "1.0.0",
    "description": "ViteviteApp Backend API",
    "scripts": {
        "start": "uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}",
        "dev": "uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
        "migrate": "alembic upgrade head",
        "seed": "python scripts/seed_production.py",
        "postinstall": "alembic upgrade head && python scripts/seed_production.py"
    },
    "engines": {
        "python": "3.11.x"
    }
}